<h1 class="title mt-3">My books</h1>

    <div class="row d-flex flex-wrap justify-content-center mx-auto mb-5 px-5">
        {{#each books}}
        <div class="col-sm-3 mx-0 px-0">
            <div class="books-container w-100">
                <div class="card m-2">

                    <img src={{this.image_url}} class="card-img-top" alt="{{this.title}}">
                    
                    <div class="card-body pb-0">
                        <div class="books-content">
                            <h5 class="card-title bold">{{this.title}}</h5>
                            <p class="card-author">{{this.author}}</p>
                            
                            <div class="books-info d-flex justify-content-between align-items-flex-end">
                                <p class="card-text">{{this.year}}</p>
                                <p class="card-text">{{this.pages}} pages</p>
                                <p class="card-text"><i class="fa-solid fa-star h6"></i> {{this.rating}}/5</p>
                            </div>
                        </div>

                        <div class="books-buttons">
                            <a href="books/{{this.id}}">More Info</a>
                        </div>
            
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
